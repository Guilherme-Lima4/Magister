<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignRight="@id/img_message_user1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_message_user1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_msg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/tekhelet"
        android:layout_marginEnd="8dp"
        android:background="@drawable/text_msg"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="Essa Ã© a mensagem como fica quando tiver full"
        app:layout_constraintEnd_toStartOf="@+id/img_message_user1"
        app:layout_constraintTop_toTopOf="@+id/img_message_user1" />

</androidx.constraintlayout.widget.ConstraintLayout>